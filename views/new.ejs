<!DOCTYPE html>
<html lang="zxx" class="no-js">

<head>
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon-->
    <link rel="shortcut icon" href="img/fav.png">
    <!-- Author Meta -->
    <meta name="author" content="codepixer">
    <!-- Meta Description -->
    <meta name="description" content="">
    <!-- Meta Keyword -->
    <meta name="keywords" content="">
    <!-- meta character set -->
    <meta charset="UTF-8">
    <!-- Site Title -->
    <title>Book</title>

    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- CSS -->
    <link rel="stylesheet" href="/styles/linearicons.css">
    <link rel="stylesheet" href="/styles/font-awesome.min.css">
    <link rel="stylesheet" href="/styles/bootstrap.css">
    <link rel="stylesheet" href="/styles/magnific-popup.css">
    <link rel="stylesheet" href="/styles/nice-select.css">
    <link rel="stylesheet" href="/styles/animate.min.css">
    <link rel="stylesheet" href="/styles/owl.carousel.css">
    <link rel="stylesheet" href="/styles/main.css">
</head>

<body>

    <%- include('partials/header.ejs'); %>

    <!-- Start banner Area -->
    <section class="banner-area" id="home" style="position: relative; background-image: url('/images/new.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat; height: 600px;">
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 1;"></div> <!-- Dark overlay -->
        <div class="container" style="position: relative; z-index: 2;">
            <div class="row fullscreen d-flex align-items-center justify-content-center" style="height: 100%;">
                <div class="col-lg-12 text-center">
                    <div class="banner-content text-white" style="width: 80%; margin: auto;">
                        <h1 class="banner-title" style="font-size: 3rem; margin: 0; color: #fff;">Add Your Book Review</h1>
                        <p style="font-size: 1.25rem; color: #ddd; margin-top: 10px;">
                            Share your thoughts on the latest books you've read. Your reviews help others discover great reads and enhance our book community.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End banner Area -->

    <!-- New Book Form -->
    <section class="section-gap" id="add-book">
        <div class="container">
            <h1 style="margin-bottom: 20px;">Add Review</h1>
            <form id="newBookForm" method="post" action="/new">
                <input type="text" name="title" placeholder="Title" required class="form-control mb-3" style="padding: 10px; border-radius: 5px; border: 1px solid #ddd;">
                <textarea name="description" rows="10" placeholder="Description" required class="form-control mb-3" style="padding: 10px; border-radius: 5px; border: 1px solid #ddd;"></textarea>
                <input type="text" name="author" placeholder="Author" required class="form-control mb-3" style="padding: 10px; border-radius: 5px; border: 1px solid #ddd;">
                <input type="text" name="rating" placeholder="Rating" required class="form-control mb-3" style="padding: 10px; border-radius: 5px; border: 1px solid #ddd;">
                <input type="text" name="isbn" placeholder="ISBN" required class="form-control mb-3" style="padding: 10px; border-radius: 5px; border: 1px solid #ddd;">
                <button class="genric-btn primary full-width" type="submit" style="padding: 10px; font-size: 16px; border-radius: 5px;">Submit</button>
            </form>
        </div>
    </section>
    <!-- End New Book Form -->

    <!-- Start footer Area -->
    <%- include('partials/footer.ejs'); %>
    <!-- End footer Area -->

    <script src="/js/vendor/jquery-2.2.4.min.js"></script>
    <script src="/js/vendor/bootstrap.min.js"></script>
    <script src="/js/easing.min.js"></script>
    <script src="/js/hoverIntent.js"></script>
    <script src="/js/superfish.min.js"></script>
    <script src="/js/jquery.ajaxchimp.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/jquery.sticky.js"></script>
    <script src="/js/jquery.nice-select.min.js"></script>
    <script src="/js/waypoints.min.js"></script>
    <script src="/js/jquery.counterup.min.js"></script>
    <script src="/js/parallax.min.js"></script>
    <script src="/js/mail-script.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>
